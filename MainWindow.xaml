<Window x:Class="QemuUtil.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QemuUtil"
        mc:Ignorable="d"
        Title="ISO/IMG boot" Height="435" Width="250" Opacity="0.7" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Hidden">
    <Grid Margin="0,0,10,3" Background="#FFFCF2FF" OpacityMask="Black">
        <Grid Margin="6,4,-4,10">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0*"/>
            </Grid.RowDefinitions>
            <ListBox x:Name="IMGs" MouseDoubleClick="BootHidden" ToolTip="Doubleclick on any intem to attempt virtual boot" Background="#FF1419E3" Foreground="#FFF6F007" Margin="0,0,0,-8" Grid.RowSpan="2" ScrollViewer.VerticalScrollBarVisibility="Hidden" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Hidden"/>
            <Button x:Name="Scanner" Content="Scan" Padding="1,-4,1,-1" Margin="166,354,0,0" Height="24" Width="35" Click="ScanImages" RenderTransformOrigin="0.5,0.5"/>
            <Button Content="Add image" HorizontalAlignment="Left" Margin="4,358,0,0" VerticalAlignment="Top" Click="FindImages" Width="70" Height="25" Background="#FFFAF8F8" Foreground="#FFEB0505" FontWeight="Bold">
                <!--<Button.OpacityMask>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Button.OpacityMask>-->
            </Button>
            <Button Content="Remove image" HorizontalAlignment="Left" Margin="74,358,0,0" VerticalAlignment="Top" Click="RemoveImage" Width="99" Height="25" Background="#FFFAF8F8" Foreground="#FFEB0505" FontWeight="Bold">
                <Button.OpacityMask>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="Black"/>
                        <GradientStop Color="White" Offset="1"/>
                    </LinearGradientBrush>
                </Button.OpacityMask>
            </Button>
            <CheckBox x:Name="ShowOutput" Content="" ToolTip="show terminal" Height="15" Width="16" RenderTransformOrigin="0.219,11.501" Margin="88,0,0,-300" Checked="ShowTerminal"/>
        </Grid>
    </Grid>
</Window>
